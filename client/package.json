{
  "name": "voice-social-client",
  "version": "1.0.0",
  "description": "Voice Social - React Frontend with PWA, Firebase, and Socket.io integration",
  "homepage": ".",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "react-router-dom": "^6.15.0",
    "firebase": "^10.1.0",
    "socket.io-client": "^4.7.2",
    "axios": "^1.5.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.5",
    "@mui/icons-material": "^5.14.3",
    "@mui/lab": "^5.0.0-alpha.141",
    "framer-motion": "^10.16.1",
    "fuse.js": "^6.6.2",
    "date-fns": "^2.30.0",
    "react-hook-form": "^7.45.4",
    "react-dropzone": "^14.2.3",
    "react-intersection-observer": "^9.5.2",
    "@tanstack/react-virtual": "^3.0.0",
    "workbox-webpack-plugin": "^7.0.0",
    "idb": "^7.1.1",
    "uuid": "^9.0.0",
    "js-cookie": "^3.0.5",
    "react-image-crop": "^10.1.8",
    "react-player": "^2.12.0",
    "emoji-picker-react": "^4.4.9",
    "react-helmet-async": "^1.3.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "preinstall": "rm -rf node_modules package-lock.json",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "serve": "serve -s build -l 3000",
    "pwa:install": "workbox generateSW workbox-config.js",
    "clean": "rm -rf build node_modules package-lock.json && npm install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "react-virtual": "npm:@tanstack/react-virtual@^3.0.0"
  },
  "resolutions": {
    "react-virtual": "npm:@tanstack/react-virtual@^3.0.0"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.3",
    "@types/uuid": "^9.0.2",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.1",
    "serve": "^14.2.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "proxy": "http://localhost:5000"
}